@model DirectAgents.Domain.Entities.AB.ABClient

<fieldset>
    <legend>Edit Client</legend>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        @Html.HiddenFor(m => m.Id)
        <div style="float:left">
            <table>
                <tr>
                    <td>@Html.LabelFor(m => m.Id)</td>
                    <td>@Html.DisplayFor(m => m.Id)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.Name)</td>
                    <td>@Html.EditorFor(m => m.Name)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.ExtCredit)</td>
                    <td>@Html.EditorFor(m => m.ExtCredit)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.IntCredit)</td>
                    <td>@Html.EditorFor(m => m.IntCredit)</td>
                </tr>
            </table>
            <br />
            <input type="submit" value="Save" />
            &nbsp;@Html.ActionLink("cancel", "Show", new { id = Model.Id })
        </div>
    }
</fieldset>